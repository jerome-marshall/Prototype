<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SignupActivity">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="top|center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="First Name"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/FirstnameEdit"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ems="30"
            android:hint="eg, Jerome"
            android:inputType="text"
            android:background="@drawable/rounded_rectangle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="Last Name:"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/LastnameEdit"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ems="30"
            android:hint="eg, Marshall"
            android:inputType="text"
            android:background="@drawable/rounded_rectangle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="Date of Birth:"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/DOBEdit"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ems="30"
            android:hint="DD/MM/YYYY"
            android:inputType="date"
            android:background="@drawable/rounded_rectangle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="E-mail ID:"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/EmailEdit"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ems="30"
            android:hint="abc@xyz.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_rectangle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="User Name:"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/UsernameEdit"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ems="30"
            android:hint="username"
            android:inputType="text"
            android:background="@drawable/rounded_rectangle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="Password:"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/PasswordEdit"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ems="30"
            android:hint=" enter password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_rectangle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="Confirm Password:"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/ConfirmpassEdit"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ems="30"
            android:hint="re-enter password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_rectangle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="State:"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <Spinner
            android:id="@+id/StateSpinner"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:contentDescription="@string/state"
            android:background="@drawable/rounded_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="City"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <Spinner
            android:id="@+id/CitySpinner"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:contentDescription="@string/state"
            android:background="@drawable/rounded_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:text="Chapter"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_marginTop="5dp"
            />

        <Spinner
            android:id="@+id/ChapterSpinner"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:contentDescription="@string/state"
            android:background="@drawable/rounded_rectangle"/>

        <ImageButton
            android:id="@+id/SignupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/signup"
            android:background="@drawable/signupbutton"/>

    </LinearLayout>
</ScrollView>